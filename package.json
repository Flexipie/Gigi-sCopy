{
  "name": "gigis-copy-tool",
  "version": "1.0.1",
  "description": "Chrome MV3 extension for capturing and managing text selections",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint *.js **/*.js",
    "lint:fix": "eslint *.js **/*.js --fix"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "setupFilesAfterEnv": ["<rootDir>/__tests__/setup.js"],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "collectCoverageFrom": [
      "*.js",
      "services/**/*.js",
      "utils/**/*.js",
      "!jest.config.js",
      "!coverage/**",
      "!node_modules/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "eslint": "^8.54.0",
    "jest": "^29.7.0"
  },
  "keywords": [
    "chrome-extension",
    "clipboard",
    "productivity"
  ],
  "author": "Flexipie",
  "license": "MIT"
}
